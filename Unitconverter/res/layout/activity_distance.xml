<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <EditText
        android:id="@+id/distanceField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textDistance"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="52dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/distanceField"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Distance" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/distanceField"
        android:layout_below="@+id/distanceField"
        android:layout_marginTop="77dp" >

        <RadioButton
            android:id="@+id/radioMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton" />
    </RadioGroup>
    
        <Button
        android:id="@+id/distActBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="121dp"
        android:layout_marginRight="17dp"
        android:text="Distance" />

        <Button
        android:id="@+id/weightActBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/distActBtn"
        android:layout_alignBottom="@+id/distActBtn"
        android:layout_toRightOf="@+id/distActBtn"
        android:text="Weight" />

        <Button
        android:id="@+id/tempActBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weightActBtn"
        android:layout_alignBottom="@+id/weightActBtn"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/weightActBtn"
        android:text="Temp." /> 
    
    

</RelativeLayout>